.upload-icon {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx dashed #8B0016;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-inner {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}

.plus-horizontal,
.plus-vertical {
  position: absolute;
  background: #8B0016;
}

.plus-horizontal {
  width: 100%;
  height: 4rpx;
  top: 50%;
  transform: translateY(-50%);
}

.plus-vertical {
  width: 4rpx;
  height: 100%;
  left: 50%;
  transform: translateX(-50%);
} 