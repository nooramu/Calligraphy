.container {
  padding: 30rpx;
  background: #8B0016;
  min-height: 100vh;
}

.about-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  width: 100%;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
}

.title-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.app-name {
  font-size: 44rpx;
  font-weight: bold;
  color: #2C3D4F;
  line-height: 1.2;
  font-family: "STKaiti", "楷体", "华文楷体";
}

.version {
  font-size: 28rpx;
  color: #999;
  margin-top: 8rpx;
}

.divider {
  width: 100%;
  height: 1rpx;
  background: rgba(0, 0, 0, 0.05);
  margin: 40rpx 0;
}

.section {
  width: 100%;
  margin-bottom: 40rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3D4F;
  margin-bottom: 20rpx;
  display: block;
  font-family: "STKaiti", "楷体", "华文楷体";
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  display: block;
  margin-bottom: 12rpx;
}

.section-content:last-child {
  margin-bottom: 0;
} 