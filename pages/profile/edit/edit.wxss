.container {
  padding: 30rpx 30rpx;
  background: #8B0016;
  min-height: 100vh;
}

.edit-form {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
  font-family: "STKaiti", "楷体", "华文楷体";
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 0;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  border: 6rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.change-text {
  font-size: 24rpx;
  color: #8B0016;
  margin-top: 12rpx;
}

.input {
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  height: 180rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.save-btn {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  height: 88rpx;
  background: #fff;
  color: #8B0016;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
  font-family: "STKaiti", "楷体", "华文楷体";
}

.save-btn:active {
  opacity: 0.9;
  background: rgba(255, 255, 255, 0.9);
} 