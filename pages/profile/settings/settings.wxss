.container {
  padding: 30rpx;
  background: #8B0016;
  min-height: 100vh;
}

.settings-list {
  width: 100%;
}

.settings-group {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.settings-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.settings-item:last-child {
  border-bottom: none;
}

.item-text {
  font-size: 32rpx;
  color: #2C3D4F;
  font-family: "STKaiti", "楷体", "华文楷体";
}

.arrow-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.4;
}

.logout-text {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #8B0016;
  font-family: "STKaiti", "楷体", "华文楷体";
} 