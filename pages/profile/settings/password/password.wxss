.container {
  padding: 30rpx 30rpx;
  background: #8B0016;
  min-height: 100vh;
}

.password-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  width: 90%;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
  font-family: "STKaiti", "楷体", "华文楷体";
}

.input {
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.save-btn {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  height: 88rpx;
  background: #fff;
  color: #8B0016;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
  font-family: "STKaiti", "楷体", "华文楷体";
}

.save-btn:active {
  opacity: 0.9;
  background: rgba(255, 255, 255, 0.9);
} 