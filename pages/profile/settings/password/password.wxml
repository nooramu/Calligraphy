<view class="container">
  <view class="password-card">
    <view class="form-item">
      <text class="label">原密码</text>
      <input class="input" 
             type="password"
             placeholder="请输入原密码"
             value="{{oldPassword}}"
             bindinput="onOldPasswordInput"/>
    </view>

    <view class="form-item">
      <text class="label">新密码</text>
      <input class="input" 
             type="password"
             placeholder="请输入新密码"
             value="{{newPassword}}"
             bindinput="onNewPasswordInput"/>
    </view>

    <view class="form-item">
      <text class="label">确认新密码</text>
      <input class="input" 
             type="password"
             placeholder="请再次输入新密码"
             value="{{confirmPassword}}"
             bindinput="onConfirmPasswordInput"/>
    </view>
  </view>

  <button class="save-btn" bindtap="changePassword">确认修改</button>
</view> 