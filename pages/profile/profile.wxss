/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background: #8B0016;
  padding: 50rpx 24rpx;
}

/* 用户信息卡片 */
.user-card {
  background: rgba(255, 255, 255, 0.98);
  padding: 40rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  position: relative;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 32rpx;
}

.avatar {
  width: 228rpx;
  height: 228rpx;
  border-radius: 114rpx;
  margin-right: 32rpx;
  border: 6rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.info-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 12rpx;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  color: #2C3D4F;
  line-height: 1.2;
  font-family: "STKaiti", "楷体", "华文楷体";
}

.user-id {
  font-size: 28rpx;
  color: #666;
  line-height: 1.2;
}

.signature {
  font-size: 24rpx;
  color: #999;
  line-height: 1.2;
}

/* 数据统计栏 */
.stats-bar {
  background: rgba(255, 255, 255, 0.98);
  padding: 22rpx 0;
  display: flex;
  justify-content: space-around;
  margin-top: 24rpx;
  width: 100%;
  box-sizing: border-box;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx;
  flex: 1;
}

.stat-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #88303c;
  margin-bottom: 12rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
}

/* 功能菜单列表 */
.menu-list {
  margin-top: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.menu-group {
  background: rgba(255, 255, 255, 0.98);
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #2C3D4F;
  font-family: "STKaiti", "楷体", "华文楷体";
}

.arrow-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.4;
}

/* 编辑按钮 */
.edit-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: rgba(139, 0, 22, 0.1);
  border-radius: 30rpx;
}

.edit-icon {
  font-size: 28rpx;
  color: #8B0016;
  margin-right: 8rpx;
}

.edit-text {
  font-size: 24rpx;
  color: #8B0016;
}

/* 未登录状态样式 */
.user-info:not(.logged) .nickname {
  color: #8B0016;
  font-size: 36rpx;
}

.user-info:not(.logged) .user-id {
  color: #999;
  font-size: 24rpx;
}

/* 点击反馈效果 */
.user-info:not(.logged):active {
  opacity: 0.8;
}