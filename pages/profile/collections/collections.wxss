.container {
  padding: 30rpx;
  background: #8B0016;
  min-height: 100vh;
}

.collections-list {
  width: 100%;
}

.collection-item {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.item-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3D4F;
  margin-bottom: 12rpx;
  font-family: "STKaiti", "楷体", "华文楷体";
}

.item-meta {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.item-author {
  font-size: 26rpx;
  color: #666;
  margin-right: 16rpx;
}

.item-dynasty {
  font-size: 24rpx;
  color: #999;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: rgba(139, 0, 22, 0.1);
  border-radius: 30rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #8B0016;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.8;
}

.empty-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
  font-family: "STKaiti", "楷体", "华文楷体";
}

.empty-tip {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
} 