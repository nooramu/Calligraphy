.container {
  min-height: 100vh;
  background: #fff;
  color: #333;
  padding-bottom: 300rpx;
  padding-top: 60rpx;
  padding-left: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 10rpx;
}

.image-section {
  padding: 4rpx 0;
  padding-left: 20rpx;
  width: 100%;
  margin-bottom: 0;
}

.image-list {
  display: flex;
  gap: 8rpx;
  overflow-x: auto;
  padding-bottom: 1rpx;
  flex-direction: row;
  width: 90%;
}

.image-list::-webkit-scrollbar {
  display: none;
}

.image-item {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0,0,0,0.5);
  border-radius: 50%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.add-image {
  width: 200rpx;
  height: 200rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 0;
}

.add-icon {
  font-size: 50rpx;
  color: #999;
}

.title-input {
  width: 90%;
  padding: 10rpx 10rpx;
  font-size: 32rpx;
  color: #333;
  margin-left: 10rpx;
}

.content-input {
  width: 90%;
  padding: 0 10rpx 290rpx;
  font-size: 28rpx;
  min-height: 200rpx;
  color: #333;
  margin-left: 10rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #fff;
  border-top: 1px solid #eee;
}

.publish-btn {
  width: 100%;
  height: 80rpx;
  background: #88303c;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 占位符样式 */
.title-input::placeholder,
.content-input::placeholder {
  color: #999;
} 