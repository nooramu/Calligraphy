.container {
  padding: 30rpx 40rpx;
  background: #fff;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 帖子标题区域 */
.post-header {
  border-bottom: 1rpx solid #eee;
}

.post-title {
  font-size: 36rpx;
  padding-bottom: 20rpx;
  color: #333;
  font-family: "STKaiti", "楷体", "华文楷体";
}

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 0 40rpx;
  margin: 0 -40rpx;
  padding-bottom: 12rpx;
  margin-bottom: 12rpx;
  border-bottom: 1rpx solid #eee;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.user-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  justify-content: flex-start;
  align-items: flex-start;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.2;
  text-align: left;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  line-height: 1.2;
  text-align: left;
}

/* 帖子内容区域 */
.post-content {
  padding: 20rpx 40rpx;
  margin: 0 -40rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.post-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 20rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
  text-align: justify;
}

.post-image {
  width: 100%;
  border-radius: 12rpx;
  margin: 20rpx 0;
}

/* 评论区域 */
.comments-section {
  margin-top: 10rpx;
  padding: 15rpx 40rpx;
  margin: 0 -10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.comment-item {
  padding: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.comment-user {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.comment-content {
  padding-left: 76rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
  word-wrap: break-word;
  text-align: justify;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 其他样式保持不变... */
.interactions {
  display: flex;
  justify-content: flex-start;
  padding: 20rpx 40rpx;
  margin: 0 -40rpx;
  border-bottom: 1rpx solid #eee;
  gap: 100rpx;
  padding-left: 80rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.icon {
  font-size: 40rpx;
  color: #999;
}

.icon.liked {
  color: #ff2442;
}

.count {
  font-size: 28rpx;
  color: #666;
}

.comment-input-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  gap: 20rpx;
  z-index: 100;
}

.comment-input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  background: #ff2442;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

/* 标题区域 */
.title-section {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
}

.post-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  font-family: "STKaiti", "楷体", "华文楷体";
  display: block;
  padding-top: 16rpx;
}

/* 内容区域 */
.content-section {
  background: #fff;
  padding: 16rpx 24rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.post-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
  word-wrap: break-word;
  text-align: justify;
  display: block;
  margin-bottom: 20rpx;
} 