.container {
  padding: 30rpx;
  background: #fff;
  min-height: 100vh;
}

.history-list {
  width: 100%;
}

.history-item {
  display: flex;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.history-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  border: 1px solid rgba(139, 69, 19, 0.1);
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.style-name {
  font-size: 32rpx;
  color: #2C3D4F;
  font-weight: 500;
}

.analyze-time {
  font-size: 24rpx;
  color: #999999;
}

/* 添加弹窗相关样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-height: 80vh;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  overflow-y: auto;
}

.modal-image {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
}

.modal-info {
  padding: 0 16rpx;
}

.modal-title {
  font-size: 36rpx;
  color: #2C3D4F;
  font-weight: bold;
  margin-bottom: 24rpx;
  text-align: center;
}

.modal-style {
  font-size: 32rpx;
  color: #2C3D4F;
  margin-bottom: 16rpx;
}

.modal-confidence {
  font-size: 28rpx;
  color: #8B4513;
  margin-bottom: 16rpx;
}

.modal-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
}

.modal-close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 40rpx;
  color: #999;
} 