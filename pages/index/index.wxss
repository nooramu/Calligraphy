/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  padding: 32rpx;
  background-color: #F5F5F5;
  min-height: 100vh;
}

.upload-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2C3D4F;
  margin-bottom: 40rpx;
  font-family: "PingFang SC";
  position: relative;
  padding: 0 40rpx;
}

/* 标题两侧的水墨装饰 */
.title::before,
.title::after {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 80%;
  top: 10%;
  background-size: contain;
  background-repeat: no-repeat;
}

.title::before {
  left: 0;
  background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIyNCIgaGVpZ2h0PSI4MCIgdmlld0JveD0iMCAwIDI0IDgwIj48cGF0aCBkPSJNMTIgMEMyIDAgMCA0MCAwIDQwczIgNDAgMTIgNDBjMTAgMCAxMi00MCAxMi00MFMyMiAwIDEyIDB6IiBmaWxsPSIjMkMzRDRGIiBmaWxsLW9wYWNpdHk9IjAuMSIvPjwvc3ZnPg==');
}

.title::after {
  right: 0;
  background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIyNCIgaGVpZ2h0PSI4MCIgdmlld0JveD0iMCAwIDI0IDgwIj48cGF0aCBkPSJNMTIgMEMyIDAgMCA0MCAwIDQwczIgNDAgMTIgNDBjMTAgMCAxMi00MCAxMi00MFMyMiAwIDEyIDB6IiBmaWxsPSIjMkMzRDRGIiBmaWxsLW9wYWNpdHk9IjAuMSIvPjwvc3ZnPg==');
  transform: scaleX(-1);
}

.upload-box {
  width: 600rpx;
  height: 400rpx;
  border: 4rpx dashed #8B4513;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
  background: linear-gradient(to bottom right, rgba(139, 69, 19, 0.05), rgba(184, 115, 51, 0.05));
  position: relative;
  overflow: hidden;
}

/* 水墨晕染效果 */
.upload-box::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('data:image/svg+xml;base64,');
  opacity: 0.6;
  pointer-events: none;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #8B4513;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.8;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.analyze-btn {
  width: 600rpx;
  height: 88rpx;
  background: #2C3D4F;
  color: #ffffff;
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(44, 61, 79, 0.1);
  position: relative;
  overflow: hidden;
}

/* 按钮水墨效果 */
.analyze-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transform: translateX(-100%);
  transition: transform 0.3s;
}

.analyze-btn:active::after {
  transform: translateX(100%);
}

.history-section {
  width: 100%;
  margin-top: 60rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3D4F;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: #8B4513;
  margin-right: 16rpx;
  border-radius: 3rpx;
}

.history-list {
  width: 100%;
}

.history-item {
  display: flex;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

/* 历史记录卡片装饰 */
.history-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, transparent, rgba(139, 69, 19, 0.02), transparent);
}

.history-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  border: 1px solid rgba(139, 69, 19, 0.1);
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.style-name {
  font-size: 32rpx;
  color: #2C3D4F;
  font-weight: 500;
}

.analyze-time {
  font-size: 24rpx;
  color: #999999;
}

/* 禁用状态 */
.analyze-btn[disabled] {
  background: #CCCCCC;
  color: #FFFFFF;
  opacity: 0.6;
}

.button-group {
  width: 600rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.analyze-btn {
  width: 100%;
  height: 88rpx;
  background: #2C3D4F;
  color: #ffffff;
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(44, 61, 79, 0.1);
  position: relative;
  overflow: hidden;
}

.clear-btn {
  width: 100%;
  height: 88rpx;
  background: #F5F5F5;
  color: #8B4513;
  border: 2rpx solid #8B4513;
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

.result-section {
  width: 600rpx;
  margin-top: 32rpx;
}

.result-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.result-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, transparent, rgba(139, 69, 19, 0.02), transparent);
  pointer-events: none;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(139, 69, 19, 0.1);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3D4F;
}

.confidence {
  font-size: 24rpx;
  color: #8B4513;
}

.result-content {
  margin-bottom: 16rpx;
}

.style-label {
  font-size: 28rpx;
  color: #666666;
}

.style-value {
  font-size: 32rpx;
  color: #2C3D4F;
  font-weight: 500;
  margin-left: 8rpx;
}

.style-description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid rgba(139, 69, 19, 0.1);
}
