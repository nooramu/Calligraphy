/**index.wxss**/
page {
  background: #8B0016;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: auto;
  background: #8B0016;
  min-height: 100vh;
}

.userinfo,
.userinfo-avatar,
.usermotto,
.avatar-wrapper,
.avatar,
.nickname-wrapper,
.nickname-label,
.nickname-input {
  display: none;
}

.container {
  min-height: 100vh;
  background: #8B0016;
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  padding: 20rpx;
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.title {
  font-size: 44rpx;
  color: #2C3D4F;
  text-align: center;
  font-family: "STKaiti", "楷体", "华文楷体";
  margin-bottom: 20rpx;
}

.upload-section {
  width: 100%;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.upload-title {
  font-size: 32rpx;
  color: #2C3D4F;
  margin-bottom: 24rpx;
  font-family: "STKaiti", "楷体", "华文楷体";
}

.upload-box {
  width: 100%;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx dashed #88303c;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.upload-placeholder text {
  font-size: 28rpx;
  color: #88303c;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  object-fit: cover;
}

.result-section {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.result-title {
  font-size: 32rpx;
  color: #2C3D4F;
  margin-bottom: 24rpx;
  font-family: "STKaiti", "楷体", "华文楷体";
}

.result-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.style-name {
  font-size: 28rpx;
  color: #2C3D4F;
  font-family: "STKaiti", "楷体", "华文楷体";
}

.confidence {
  font-size: 24rpx;
  color: #88303c;
}

.analyze-btn {
  width: 100%;
  height: 88rpx;
  background: #88303c;
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(136, 48, 60, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.analyze-btn[disabled] {
  background: #CCCCCC;
  color: #FFFFFF;
  opacity: 0.6;
}

.analyze-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(136, 48, 60, 0.2);
}

.history-section {
  width: 100%;
  margin-top: 60rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3D4F;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: #8B4513;
  margin-right: 16rpx;
  border-radius: 3rpx;
}

.history-list {
  width: 100%;
}

.history-item {
  display: flex;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

/* 历史记录卡片装饰 */
.history-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, transparent, rgba(139, 69, 19, 0.02), transparent);
}

.history-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  border: 1px solid rgba(139, 69, 19, 0.1);
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.style-name {
  font-size: 32rpx;
  color: #2C3D4F;
  font-weight: 500;
}

.analyze-time {
  font-size: 24rpx;
  color: #999999;
}

.button-group {
  width: 100%;
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.clear-btn {
  width: 100%;
  height: 88rpx;
  background: #F5F5F5;
  color: #88303c;
  border: 2rpx solid #88303c;
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  margin-top: 16rpx;
}

.result-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.result-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, transparent, rgba(139, 69, 19, 0.02), transparent);
  pointer-events: none;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(139, 69, 19, 0.1);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3D4F;
}

.confidence {
  font-size: 24rpx;
  color: #8B4513;
}

.result-content {
  margin-bottom: 16rpx;
}

.style-label {
  font-size: 28rpx;
  color: #666666;
}

.style-value {
  font-size: 32rpx;
  color: #2C3D4F;
  font-weight: 500;
  margin-left: 8rpx;
}

.style-description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid rgba(139, 69, 19, 0.1);
}

.analyze-btn {
  width: 100%;
  height: 88rpx;
  background: #88303c;
  color: #FFFFFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(136, 48, 60, 0.3);
  transition: all 0.3s ease;
}

.analyze-btn[disabled] {
  background: #CCCCCC;
  color: #FFFFFF;
  opacity: 0.6;
}

.analyze-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(136, 48, 60, 0.2);
}
